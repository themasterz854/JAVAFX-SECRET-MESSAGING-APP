<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" styleClass="filechooser" stylesheets="@design.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.NASListController">
    <children>
        <Button fx:id="select_one" layoutX="14.0" layoutY="368.0" mnemonicParsing="false" onAction="#selectafile" text="Select a file" />
        <Button fx:id="select_multiple" layoutX="101.0" layoutY="368.0" mnemonicParsing="false" onAction="#selectmultiplefiles" text="Select multiple files" />
        <ListView fx:id="FileList" layoutX="300.0" layoutY="95.0" opacity="0.7" prefHeight="268.0" prefWidth="293.0" />
        <Button layoutX="410.0" layoutY="368.0" mnemonicParsing="false" onAction="#receivefile" text="Receive" />
        <Button layoutX="530.0" layoutY="368.0" mnemonicParsing="false" onAction="#refresh" text="Refresh" />
      <ListView fx:id="sendlist" layoutX="14.0" layoutY="96.0" opacity="0.7" prefHeight="268.0" prefWidth="265.0" />
      <Button fx:id="sendfiles" layoutX="236.0" layoutY="368.0" mnemonicParsing="false" onAction="#uploadthefiles" text="Send" />
      <TextArea fx:id="status" editable="false" layoutX="14.0" layoutY="7.0" prefHeight="80.0" prefWidth="265.0" text="Upload STATUS" wrapText="true" />
        <TextArea fx:id="receivestatus" editable="false" layoutX="300.0" layoutY="7.0" prefHeight="80.0" prefWidth="293.0" text="Receive STATUS" wrapText="true">
         <font>
            <Font size="14.0" />
         </font>
      </TextArea>
      <Button layoutX="322.0" layoutY="368.0" mnemonicParsing="false" onAction="#deletethefiles" text="Delete" />

    </children>
</AnchorPane>
